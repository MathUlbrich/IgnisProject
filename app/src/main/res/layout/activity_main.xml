<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mathulbrich.ignisproject.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/honeycomb"/>

    <ImageView
        android:id="@+id/ignis"
        android:layout_width="wrap_content"
        android:layout_height="530dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/ignis_stand" />

    <ImageView
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="425dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/dialog" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/dialog"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:text=""
        android:textColor="@color/messageText"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/timebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@mipmap/timebar" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timebar"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="27dp"
        android:text="00:00"
        android:textColor="@color/messageText"
        android:textSize="38sp" />

</RelativeLayout>
